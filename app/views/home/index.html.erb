
<div class="container">
    <div class="contents">
<% @selected_items.each do |item| %>
<div class="item">
  <div class="data">
    <div class="img">
    <%= link_to item_path(item) do %>
      <% if item.image.attached? %>
        <%= image_tag item.image %>
      <% end %>
    <% end %>
  </div>

  <div class="info">
  <p><%= item.name %></p>
  <p>綺麗め度:<%= item.clean_index %></p>
  <p>厚着度:<%= item.heat_index %></p>
  <p>カラー度:<%= item.color_difference %></p>
  
  </div>
  </div>
    
</div>
  
<% end %>
</div>


<div class="nav">
<%= form_with(url: home_index_path, method: "get", local: true) do |f| %>

