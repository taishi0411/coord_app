<%= form_with(model: @item, local: true) do |f| %>
  <div class="new-form">
      <%= f.label :アイテム名%>
      <%= f.text_field :name%>
  </div>


  <div class="new-form-img">
    <%= f.label :画像%>
    <%= f.file_field :image %>
  </div>
  

  <div class="new-form ">
      <%= f.submit "変更を保存する" %>
  </div>
  <% end %>

   <%= button_to "削除", item_path(@item),{ method: :delete, data: { confirm: "本当に削除してもいいですか？" } } %>